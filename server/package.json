{
  "name": "qikiworld-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:dev": "prisma migrate dev --name init",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "worker": "node dist/worker/index.js",
    "search:bootstrap": "tsx src/search/bootstrap.ts",
    "search:reindex": "tsx src/search/reindex.ts",
    "media:migrate-local": "tsx src/scripts/migrate_local_uploads.ts",
    "digest:run": "node dist/worker/digest.js",
    "trace:test": "node -e \"require('./dist/tracing.js'); console.log('otel ok')\"",
    "dsr:worker": "node dist/worker/dsr.js",
    "format": "prettier --write .",
    "clean": "rimraf dist",
    "e2e:all": "node src/scripts/e2e-all.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "argon2": "^0.41.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "pino": "^9.2.0",
    "pino-http": "^10.3.0",
    "prom-client": "^15.1.2",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "@opentelemetry/auto-instrumentations-node": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.53.0",
    "@opentelemetry/resources": "^1.8.0",
    "@opentelemetry/semantic-conventions": "^1.26.0",
    "sanitize-html": "^2.13.0",
    "ioredis": "^5.4.1",
    "bullmq": "^5.7.10",
    "@opensearch-project/opensearch": "^2.12.0",
    "html-to-text": "^9.0.5",
    "@aws-sdk/client-s3": "^3.637.0",
    "@aws-sdk/s3-request-presigner": "^3.637.0",
    "mime-types": "^2.1.35",
    "clamdjs": "^0.4.5",
    "rate-limiter-flexible": "^5.0.1",
    "ws": "^8.18.0",
    "compression": "^1.7.4",
    "sharp": "^0.33.5",
    "archiver": "^5.3.2",
    "otplib": "^12.0.1",
    "@simplewebauthn/server": "^9.0.0",
    "base64url": "^3.0.1",
    "cookie-parser": "^1.4.6",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "prisma": "^5.18.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5",
    "@types/node": "^20.14.10",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "@typescript-eslint/parser": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "eslint-config-prettier": "^9.1.0",
    "rimraf": "^5.0.5",
    "@types/express": "^4.17.21",
    "@types/cookie-parser": "^1.4.7",
    "@types/jsonwebtoken": "^9.0.5",
    "ws": "^8.17.0"
  }
}
